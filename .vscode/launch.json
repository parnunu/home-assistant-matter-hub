{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend: Serve (inspect)",
      "type": "pwa-node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["-C", "packages/backend", "run", "serve"],
      "env": {
        "NODE_OPTIONS": "--inspect=9229"
      },
      "autoAttachChildProcesses": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Frontend: Vite",
      "type": "pwa-node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["-C", "packages/frontend", "run", "dev"],
      "autoAttachChildProcesses": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Tests: Vitest (backend)",
      "type": "pwa-node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["-C", "packages/backend", "run", "test"],
      "autoAttachChildProcesses": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ],
  "compounds": [
    {
      "name": "App: Backend + Frontend",
      "configurations": ["Backend: Serve (inspect)", "Frontend: Vite"]
    }
  ]
}
